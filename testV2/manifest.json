{
  "manifest_version": 2,
  "name": "Solid Decentralized",
  "description": "Solid Chrome Extension",
  "version": "1.0",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/icon_128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  }
}
